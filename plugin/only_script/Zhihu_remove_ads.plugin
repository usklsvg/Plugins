http-response ^https:\/\/api\.zhihu\.com\/next-(?:bff|data|render(?!.*sub_scenes=billboard_weekly)) script-path = https://kelee.one/Resource/Script/Zhihu/Zhihu_remove_ads.js, requires-body = true, tag = 移除下一个回答推广、评论区顶部推广
http-response ^https:\/\/www\.zhihu\.com\/api\/v4\/(?:articles|answers)\/\d+\/recommendations?\? script-path = https://kelee.one/Resource/Script/Zhihu/Zhihu_remove_ads.js, requires-body = true, tag = 移除回答详情页推广
http-response ^https:\/\/appcloud2\.zhihu\.com\/v3\/config script-path = https://kelee.one/Resource/Script/Zhihu/Zhihu_remove_ads.js, requires-body = true, tag = 拦截服务器推送配置 config
http-response ^https:\/\/m-cloud\.zhihu\.com\/api\/cloud\/zhihu\/config\/all\? script-path = https://kelee.one/Resource/Script/Zhihu/Zhihu_remove_ads.js, requires-body = true, tag = 拦截服务器推送配置 config all

