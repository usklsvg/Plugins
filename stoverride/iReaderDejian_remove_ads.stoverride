rules:
  - DOMAIN,smad.ms.zhangyue.net,REJECT
  - DOMAIN,saad.ms.zhangyue.net,REJECT

http:

  mitm:
    - "dj.palmestore.com"

  url-rewrite:
    - >-
      ^https:\/\/dj\.palmestore\.com\/djad\/ - reject-dict
    - >-
      ^https:\/\/dj\.palmestore\.com\/zybk\/api\/ad\/ - reject-dict
    - >-
      ^https:\/\/dj\.palmestore\.com\/zyapi\/bookstore\/ad\/ - reject-dict
    - >-
      ^https:\/\/dj\.palmestore\.com\/zybk\/api\/bookshelf\/index\? - reject-dict

  body-rewrite:
    - >-
      ^https:\/\/dj\.palmestore\.com\/zybk\/api\/powerup\/userGroup\? response-jq delpaths([["body","sevenDaysAd"]])
    - >-
      ^https:\/\/dj\.palmestore\.com\/zybk\/api\/powerup\/userGroup\? response-jq delpaths([["body","shortPlayShow"]])
    - >-
      ^https:\/\/dj\.palmestore\.com\/zybk\/api\/powerup\/userGroup\? response-jq delpaths([["body","sdkShortPlayAB"]])
    - >-
      ^https:\/\/dj\.palmestore\.com\/zybk\/api\/search\/index\? response-jq delpaths([["body","keywords"]])

