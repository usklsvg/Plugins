http:

  mitm:
    - "api.pipix.com"
    - "api5-lq.pipix.com"

  url-rewrite:
    - >-
      ^https:\/\/api(5-lq)?\.pipix\.com\/api\/ad\/ - reject-dict
    - >-
      ^https:\/\/api(5-lq)?\.pipix\.com\/bds\/banner\/ - reject-dict
    - >-
      ^https:\/\/api(5-lq)?\.pipix\.com\/bds\/feed\/follow_feed\/ - reject-dict

  body-rewrite:
    - >-
      ^https:\/\/api(5-lq)?\.pipix\.com\/bds\/feed\/stream\/v2\/ response-jq .data.data |= map(select(has("ad_info") | not))
    - >-
      ^https:\/\/api(5-lq)?\.pipix\.com\/bds\/user\/check_in\/ response-jq .data.profile_entrances |= map(select(.title != "放心借" and .title != "洋钱罐借款")) | del(.data.pet_interface_message)

